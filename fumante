package desafios;
import java.util.Scanner;

public class fumante {

    public static void main(String[] args)
    {
        Scanner cigarro = new Scanner(System.in);
        
        System.out.println("Digite quantos cigarros você fuma por dia: ");
        int fumados = cigarro.nextInt();

        System.out.println("Digite a quantos anos você fuma: ");
        int anosfumados = cigarro.nextInt();

        double total = (((fumados*10)*365)*anosfumados)/1440;

        System.out.println(total);
    }
}
